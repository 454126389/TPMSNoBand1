<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AlertDialogCustom" parent="@android:style/Theme.Dialog">
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">10sp</item>
    </style>

    <!-- ShareDialog -->
    <style name="Theme.ShareDialog" parent="android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/set_dialog</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DialogText.Title">
        <item name="android:textColor">#CCFFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogText">
        <item name="android:textColor">#FFFFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="textStyle1">
        <item name="android:textColor">#80FFFFFF</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="main_tab_bottom">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#80ffffff</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal|bottom</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_weight">1.0</item>
        <!--
       <item name="android:shadowDx">0</item>  
       <item name="android:shadowDy">3.0</item>  
       <item name="android:shadowRadius">1.0</item>  
       <item name="android:shadowColor">#444444</item>
        -->
    </style>

